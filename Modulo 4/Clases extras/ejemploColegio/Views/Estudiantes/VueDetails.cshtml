<div id="app">

    <h1>Details</h1>

    <div>
        <h4>Estudiante</h4>
        <hr />
        <dl v-if="estudiante!=null" class="row">
            <dt class="col-sm-2">Rut</dt>
            <dd class="col-sm-10">
                {{estudiante.rut}}
            </dd>
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">
                {{estudiante.nombre}}
            </dd>
            <dt class="col-sm-2">Apellido</dt>
            <dd class="col-sm-10">
                {{estudiante.apellido}}
            </dd>
            <dt class="col-sm-2">Fecha de Nacimiento</dt>
            <dd class="col-sm-10">
                {{estudiante.fechaNacimiento}}
            </dd>
            <dt class="col-sm-2">
                Edad
            </dt>
            <dd class="col-sm-10">
                {{this.calcularEdad()}}
            </dd>
            <dt class="col-sm-2">Domicilio</dt>
            <dd class="col-sm-10">
                {{estudiante.domicilio}}
            </dd>
        </dl>
    </div>

    <div class="btn-group">
        <a asp-action="VueEdit" class="btn btn-primary active" aria-current="page" asp-route-id="@Model?.Id">Editar</a>
        <a asp-action="VueIndex" class="btn btn-primary">Volver a la Lista</a>
    </div>
</div>



<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.min.js"></script>
<script>
    const { createApp } = Vue
    const url = "https://localhost:7073/api/EstudiantesAPI"

    createApp({
        data() {
            return {
                message: 'Esta es una página de Creación con VueJS incrustado',
                estudiante: null
            }
        },
        methods: {
            obtenerEstudiantes() {
                axios.get(url).then(response => {
                    console.log(response);
                    this.estudiantes = response.data;
                }).catch(error => console.log(error))
            },
            obtenerEstudiante(index) {
                axios.get(url + "/" + index).then(response => {
                    console.log(response);
                    this.estudiante = response.data;
                }).catch(error => console.log(error))
            }
            ,
            agregarEstudiante() {

                const estudiante = {
                    id: 0,
                    rut: this.rut,
                    nombre: this.nombre,
                    apellido: this.apellido,
                    fechanacimiento: this.fechanacimiento,
                    domicilio: this.domicilio
                }

                axios.post(url, estudiante).then(response => {
                    console.log(response);
                    this.message = "Usuario Agregado exitosamente!";
                    this.rut = "";
                    this.nombre = "";
                    this.apellido = "";
                    this.fechanacimiento = "";
                    this.domicilio = "";
                    window.location.href = "/Estudiantes/VueIndex/";
                }).catch(error => {
                    console.log(error)
                })
            },
            detalleEstudiante() {
                const index = window.location.pathname.split("/")[3];
                this.obtenerEstudiante(index);
                console.log(new Date());
            },
            calcularEdad() {
                const edad = (new Date().getFullYear() - new Date(this.estudiante.fechaNacimiento).getFullYear());
                console.log(edad);
                return edad;
            }
        },
        created: function () {
            this.detalleEstudiante()
        }
    }).mount('#app')
</script>