@model IEnumerable<ejemploASPMVC.Models.Automovil>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                Marca
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @foreach ( var marcaObject in ((IEnumerable<Marca>) ViewBag.listaMarcas))
                    {
                        if ( marcaObject.MarcaId == item.MarcaId)
                        {
                            @marcaObject.Nombre
                        }
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutomovilId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AutomovilId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AutomovilId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
